<Window x:Class="DolgozatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DolgozatWPF"
        mc:Ignorable="d"
        Title="Dolgozatok" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="60"/>
			<RowDefinition Height="60"/>
		</Grid.RowDefinitions>
		<DataGrid x:Name="dataGrid" Grid.Row="0"></DataGrid>
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
				<Label Content="Név:" Margin="5"></Label>
				<TextBox x:Name="nevTextBox" Width="150" Margin="5"></TextBox>
				<Label Content="Életkor:" Margin="5"></Label>
				<TextBox x:Name="eletkorTextBox" Width="50" Margin="5"></TextBox>
				<Label Content="Pontszám:" Margin="5"></Label>
				<TextBox x:Name="pontszamTextBox" Width="50" Margin="5"></TextBox>
			</StackPanel>
			<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
				<Button Content="Hozzáadás" Margin="5" Padding="5" Width="80" Click="hozzaadas"></Button>
				<Button Content="Mentés" Margin="5" Padding="5" Width="80" Click="mentes"></Button>
			</StackPanel>
	</Grid>
</Window>
